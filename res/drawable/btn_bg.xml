<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- цвет при нажатии -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorOnPress" />
            <stroke android:width="2dp" android:color="@color/colorOnHover" />
        </shape>
    </item>
    <!-- цвет при наведении -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorOnHover" />
            <stroke android:width="2dp" android:color="@color/colorOnHover" />
        </shape>
    </item>
    <!-- цвет по умолчанию -->
    <item>
        <shape android:shape="rectangle">
<!--            <solid android:color="@color/colorDefault" />-->
            <solid android:color="@color/default_background" />
            <stroke android:width="2dp" android:color="@color/colorOnHover" />
        </shape>
    </item>
</selector>
